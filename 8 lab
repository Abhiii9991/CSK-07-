def DivExp(a, b): 
    assert a > 0, "a must be > 0"
    if b == 0:   
        raise ZeroDivisionError("division by zero")   
    else: 
        c = a / b 
    return c 

a = int(input("Enter the value of a: "))   
b = int(input("Enter the value of b: ")) 
r = DivExp(a, b) 
print("The value of {0}/{1} = {2}".format(a, b, r))
